{
  "name": "curi-react",
  "version": "0.5.0",
  "description": "React web components to use with Curi",
  "main": "lib/index.js",
  "files": [
    "lib",
    "umd",
    "es",
    "LICENSE",
    "*.md"
  ],
  "scripts": {
    "prebuild": "rimraf lib umd es",
    "build": "npm run build:lib && npm run build:umd && npm run build:min && npm run build:es",
    "build:es": "cross-env BABEL_ENV=es babel ./src -d es --ignore __tests__",
    "build:lib": "cross-env BABEL_ENV=cjs babel ./src -d lib --ignore __tests__",
    "build:umd": "webpack --define process.env.NODE_ENV=\"'production'\" --output-filename=umd/curi-react.js",
    "build:min": "webpack -p --optimize-minimize --output-filename=umd/curi-react.min.js",
    "prepublish": "npm run build",
    "prettier": "prettier --single-quote --write \"{src,tests}/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pshrmn/curi/tree/master/packages/curi-react"
  },
  "keywords": [
    "React",
    "URL",
    "URI",
    "Curi",
    "routing",
    "navigation"
  ],
  "author": "Paul Sherman",
  "license": "MIT",
  "peerDependencies": {
    "react": "^15"
  },
  "dependencies": {
    "curi-react-navigator": "^0.1.0",
    "curi-react-redirect": "^0.1.0",
    "curi-react-block": "^0.1.0",
    "curi-react-link": "^0.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "cross-env": "^4.0.0",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "webpack": "^2.3.3"
  }
}
