{
  "name": "curi",
  "version": "0.6.1",
  "description": "curi is a configuration based routing solution",
  "main": "lib/index.js",
  "files": [
    "lib",
    "umd",
    "es",
    "LICENSE",
    "*.md"
  ],
  "scripts": {
    "test": "jest",
    "prebuild": "rimraf lib umd es",
    "build": "npm run build:lib && npm run build:umd && npm run build:min && npm run build:es",
    "build:es": "cross-env BABEL_ENV=es babel ./src -d es --ignore __tests__",
    "build:lib": "cross-env BABEL_ENV=cjs babel ./src -d lib --ignore __tests__",
    "build:umd": "cross-env BABEL_ENV=es rollup -c",
    "build:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -o umd/curi.min.js",
    "prepublish": "npm run build",
    "prettier": "prettier --single-quote --write \"{src,tests}/**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pshrmn/curi/tree/master/packages/curi"
  },
  "keywords": [
    "URL",
    "URI",
    "routing",
    "navigation"
  ],
  "author": "Paul Sherman",
  "license": "MIT",
  "peerDependencies": {
    "history": "^4.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "cross-env": "^4.0.0",
    "history": "^4.6.1",
    "jest": "^19.0.2",
    "prettier": "^1.2.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^1.0.2"
  },
  "dependencies": {
    "path-to-regexp": "^1.7.0"
  }
}
